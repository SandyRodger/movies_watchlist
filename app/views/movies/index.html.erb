<div class="max-w-4x1 mx-auto">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2x1 font-semibold">Movies</h1>
    <%= link_to "Add Movie",
      new_movie_path,
      class: "inline-flex items-centre whitespace-nowrap bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
  </div>

  <table class="w-full table-auto border-collapse border border-slate-400 w-full text-center">
    <thead class="bg-slate-100">
      <tr>
        <th scope="col" class="border border-slate-400 px-4 py-2">Movie</th>
        <th scope="col" class="border border-slate-400 px-4 py-2">Date Watched</th>
        <th scope="col" class="border border-slate-400 px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do | movie | %>
        <tr class="hover:bg-slate-50">
          <td class="border border-slate-300 px-4 py-2"><%= movie.title %></td>
          <td class="border border-slate-300 px-4 py-2"><%= movie.watched_at %></td>
          <td class="px-4 py-2">
            <%= button_to "Delete",
                  movie_path(movie),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this movie?" },
                  class: "inline-block bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>